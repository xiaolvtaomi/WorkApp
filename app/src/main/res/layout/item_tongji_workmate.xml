                android:textColor="#000000"
                android:textSize="12sp"/>

        </RelativeLayout>



    </LinearLayout>

    <View
        android:id="@+id/item_community_divider03"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#eeeeee"></View>

</LinearLayout>