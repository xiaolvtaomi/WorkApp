<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_translucent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/default_200" />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/img_video"
            android:layout_alignLeft="@+id/img_video"
            android:layout_alignRight="@+id/img_video"
            android:layout_alignBottom="@+id/img_video"
            android:background="@mipmap/pitch_on"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/small_tv_style"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:singleLine="true"/>
</LinearLayout>