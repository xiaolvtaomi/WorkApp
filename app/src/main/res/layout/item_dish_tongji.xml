<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#eeeeee"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <View
        android:id="@+id/item_community_divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#eeeeee"></View>

    <TextView
        android:id="@+id/tv_item_community_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="12dp"
        android:text="穷游亚洲"
        android:textColor="#000000"/>

    <View
        android:id="@+id/item_community_divider02"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#88000000"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_item_community_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_item_community_first"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_item_community_title_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_item_community_first"
                android:maxEms="10"
                android:text="德国"

                android:textColor="#000000"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/tv_item_community_num_first"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/iv_item_community_first"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_item_community_first"
                android:text="10186个帖子"
                android:src="@mipmap/none"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="* N"
                android:textColor="#000000"
                android:textSize="16sp"/>
        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/item_community_divider03"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#eeeeee"></View>

</LinearLayout>